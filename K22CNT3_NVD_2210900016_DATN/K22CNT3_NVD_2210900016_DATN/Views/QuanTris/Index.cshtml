@model IEnumerable<K22CNT3_NVD_2210900016_DATN.Models.QuanTri>

@{
    ViewBag.Title = "Quản trị hệ thống";
}

<div class="container mt-4">

    <div class="card shadow-lg border-0">
        <!-- HEADER -->
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="bi bi-people-fill"></i> Danh sách quản trị
            </h5>
            @Html.ActionLink(" + Thêm mới", "Create", null, new { @class = "btn btn-success btn-sm" })
        </div>

        <!-- BODY -->
        <div class="card-body">

            <table class="table table-bordered table-hover align-middle text-center">
                <thead class="table-secondary">
                    <tr>
                        <th>Tài khoản</th>
                        <th>Mật khẩu</th>
                        <th>Vai trò</th>
                        <th>Trạng thái</th>
                        <th style="width:180px;">Chức năng</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.TaiKhoan</td>
                            <td class="text-danger">******</td>
                            <td>
                                <span class="badge bg-info text-dark">
                                    @item.VaiTro
                                </span>
                            </td>
                            <td>
                                @if (item.TrangThai == true)
                                {
                                    <span class="badge bg-success">Hoạt động</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Khóa</span>
                                }
                            </td>
                            <td>
                                @Html.ActionLink("Sửa", "Edit", new { id = item.ID_QT }, new { @class = "btn btn-warning btn-sm" })
                                @Html.ActionLink("Chi tiết", "Details", new { id = item.ID_QT }, new { @class = "btn btn-info btn-sm mx-1" })
                                @Html.ActionLink("Xóa", "Delete", new { id = item.ID_QT }, new
                                {
                                    @class = "btn btn-danger btn-sm",
                                    onclick = "return confirm('Bạn có chắc muốn xóa quản trị này không?');"
                                })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>

</div>
