@model IEnumerable<K22CNT3_NVD_2210900016_DATN.Models.HoiVien>

@{
    ViewBag.Title = "Danh sách hội viên";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet" />

<div class="container mt-4">

    <!-- TIÊU ĐỀ -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="fw-bold text-primary">
            <i class="fa-solid fa-id-card me-2"></i> Danh sách hội viên
        </h3>

        <a href="@Url.Action("Create")" class="btn btn-success">
            <i class="fa-solid fa-plus"></i> Thêm hội viên
        </a>
    </div>

    <!-- THÔNG BÁO -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fa-solid fa-circle-check me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fa-solid fa-triangle-exclamation me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- BẢNG -->
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-bordered table-hover align-middle mb-0">
                <thead class="table-dark text-center">
                    <tr>
                        <th>Mã thẻ</th>
                        <th>Khách hàng</th>
                        <th>Ngày đăng ký</th>
                        <th>Ngày hết hạn</th>
                        <th>Cấp độ</th>
                        <th>Điểm</th>
                        <th>Ưu đãi (%)</th>
                        <th width="180">Thao tác</th>
                    </tr>
                </thead>

                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="8" class="text-center text-muted fst-italic py-4">
                                Chưa có hội viên nào
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <!-- Mã thẻ -->
                                <td class="fw-bold text-primary text-center">
                                    @item.MaThe
                                </td>

                                <!-- Khách -->
                                <td>
                                    <i class="fa-solid fa-user me-1 text-secondary"></i>
                                    @item.KhachHang.TenKhach
                                </td>

                                <!-- Ngày -->
                                <td class="text-center">
                                    @(item.NgayDangKy.HasValue
                                    ? item.NgayDangKy.Value.ToString("dd/MM/yyyy")
                                    : "—")
                                </td>

                                <td class="text-center">
                                    @(item.NgayHetHan.HasValue
                                    ? item.NgayHetHan.Value.ToString("dd/MM/yyyy")
                                    : "—")
                                </td>

                                <!-- Cấp độ -->
                                <td class="text-center">
                                    @switch (item.CapDo)
                                    {
                                        case "Kim cương":
                                            <span class="badge bg-primary">Kim cương</span>
                                            break;
                                        case "Vàng":
                                            <span class="badge bg-warning text-dark">Vàng</span>
                                            break;
                                        case "Bạc":
                                            <span class="badge bg-secondary">Bạc</span>
                                            break;
                                        default:
                                            <span class="badge bg-light text-dark">Đồng</span>
                                            break;
                                    }
                                </td>

                                <!-- Điểm -->
                                <td class="text-center fw-bold">
                                    @item.DiemTichLuy
                                </td>

                                <!-- Ưu đãi -->
                                <td class="text-center">
                                    <span class="badge bg-success">@item.UuDai %</span>
                                </td>

                                <!-- Hành động -->
                                <td class="text-center">
                                    <a href="@Url.Action("Details", new { id = item.ID_HoiVien })"
                                       class="btn btn-sm btn-info me-1" title="Chi tiết">
                                        <i class="fa-solid fa-eye"></i>
                                    </a>

                                    <a href="@Url.Action("Edit", new { id = item.ID_HoiVien })"
                                       class="btn btn-sm btn-warning me-1" title="Sửa">
                                        <i class="fa-solid fa-pen"></i>
                                    </a>

                                    <a href="@Url.Action("Delete", new { id = item.ID_HoiVien })"
                                       class="btn btn-sm btn-danger"
                                       onclick="return confirm('Bạn có chắc muốn xóa hội viên này?')"
                                       title="Xóa">
                                        <i class="fa-solid fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
