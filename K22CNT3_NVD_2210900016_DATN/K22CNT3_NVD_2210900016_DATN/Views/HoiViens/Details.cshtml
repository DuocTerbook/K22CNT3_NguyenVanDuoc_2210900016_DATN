@model K22CNT3_NVD_2210900016_DATN.Models.HoiVien

@{
    ViewBag.Title = "Chi tiết hội viên";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet" />

<div class="container mt-4">

    <!-- TIÊU ĐỀ -->
    <div class="mb-3">
        <h3 class="fw-bold text-primary">
            <i class="fa-solid fa-id-card me-2"></i> Chi tiết hội viên
        </h3>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">

            <table class="table table-borderless">
                <tr>
                    <th class="text-muted" style="width:30%">Mã thẻ</th>
                    <td class="fw-bold">@Model.MaThe</td>
                </tr>

                <tr>
                    <th class="text-muted">Khách hàng</th>
                    <td>@Model.KhachHang.TenKhach</td>
                </tr>

                <tr>
                    <th class="text-muted">Ngày đăng ký</th>
                    <td>
                        @(Model.NgayDangKy.HasValue
                        ? Model.NgayDangKy.Value.ToString("dd/MM/yyyy")
                        : "—")
                    </td>

                </tr>

                <tr>
                    <th class="text-muted">Ngày hết hạn</th>
                    <td>
                        @(Model.NgayHetHan.HasValue
                            ? Model.NgayHetHan.Value.ToString("dd/MM/yyyy")
                            : "—")

                        @if (Model.NgayHetHan.HasValue)
                        {
                            if (Model.NgayHetHan.Value < DateTime.Now)
                            {
                                <span class="badge bg-danger ms-2">Hết hạn</span>
                            }
                            else
                            {
                                <span class="badge bg-success ms-2">Còn hạn</span>
                            }
                        }
                    </td>

                </tr>

                <tr>
                    <th class="text-muted">Cấp độ</th>
                    <td>
                        @switch (Model.CapDo)
                        {
                            case "Kim cương":
                                <span class="badge bg-info text-dark">💎 Kim cương</span>
                                break;
                            case "Vàng":
                                <span class="badge bg-warning text-dark">🥇 Vàng</span>
                                break;
                            case "Bạc":
                                <span class="badge bg-secondary">🥈 Bạc</span>
                                break;
                            default:
                                <span class="badge bg-dark">🥉 Đồng</span>
                                break;
                        }
                    </td>
                </tr>

                <tr>
                    <th class="text-muted">Điểm tích lũy</th>
                    <td class="fw-bold text-success">
                        @Model.DiemTichLuy điểm
                    </td>
                </tr>

                <tr>
                    <th class="text-muted">Ưu đãi</th>
                    <td class="fw-bold text-danger">
                        @Model.UuDai %
                    </td>
                </tr>
            </table>

            <!-- NÚT CHỨC NĂNG -->
            <div class="mt-4 d-flex justify-content-between">
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="fa-solid fa-arrow-left"></i> Quay lại
                </a>

                <div>
                    <a href="@Url.Action("Edit", new { id = Model.ID_HoiVien })" class="btn btn-warning me-2">
                        <i class="fa-solid fa-pen"></i> Chỉnh sửa
                    </a>

                    <a href="@Url.Action("TichDiem", new { id = Model.ID_HoiVien })" class="btn btn-success me-2">
                        <i class="fa-solid fa-plus"></i> Tích điểm
                    </a>

                    <a href="@Url.Action("DoiDiem", new { id = Model.ID_HoiVien })" class="btn btn-danger me-2">
                        <i class="fa-solid fa-minus"></i> Đổi điểm
                    </a>

                    <a href="@Url.Action("GiaHan", new { id = Model.ID_HoiVien })" class="btn btn-info">
                        <i class="fa-solid fa-calendar-plus"></i> Gia hạn
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>
