@model K22CNT3_NVD_2210900016_DATN.Models.HoiVien

@{
    ViewBag.Title = "Xóa hội viên";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet" />

<div class="container mt-4">

    <!-- TIÊU ĐỀ -->
    <h3 class="fw-bold text-danger mb-3">
        <i class="fa-solid fa-triangle-exclamation me-2"></i> Xác nhận xóa hội viên
    </h3>

    <!-- CẢNH BÁO -->
    <div class="alert alert-danger">
        <i class="fa-solid fa-circle-exclamation me-2"></i>
        Thao tác này <strong>không thể hoàn tác</strong>. Dữ liệu hội viên sẽ bị xóa vĩnh viễn.
    </div>

    <!-- THÔNG TIN HỘI VIÊN -->
    <div class="card shadow-sm">
        <div class="card-body">

            <table class="table table-borderless">
                <tr>
                    <th style="width:30%">Mã thẻ</th>
                    <td class="fw-bold">@Model.MaThe</td>
                </tr>

                <tr>
                    <th>Khách hàng</th>
                    <td>@Model.KhachHang.TenKhach</td>
                </tr>

                <tr>
                    <th>Ngày đăng ký</th>
                    <td>@Model.NgayDangKy?.ToString("dd/MM/yyyy")</td>
                </tr>

                <tr>
                    <th>Ngày hết hạn</th>
                    <td>@Model.NgayHetHan?.ToString("dd/MM/yyyy")</td>
                </tr>

                <tr>
                    <th>Cấp độ</th>
                    <td>
                        @switch (Model.CapDo)
                        {
                            case "Kim cương":
                                <span class="badge bg-info text-dark">💎 Kim cương</span>
                                break;
                            case "Vàng":
                                <span class="badge bg-warning text-dark">🥇 Vàng</span>
                                break;
                            case "Bạc":
                                <span class="badge bg-secondary">🥈 Bạc</span>
                                break;
                            default:
                                <span class="badge bg-dark">🥉 Đồng</span>
                                break;
                        }
                    </td>
                </tr>

                <tr>
                    <th>Điểm tích lũy</th>
                    <td class="fw-bold text-success">@Model.DiemTichLuy điểm</td>
                </tr>

                <tr>
                    <th>Ưu đãi</th>
                    <td class="fw-bold text-danger">@Model.UuDai %</td>
                </tr>
            </table>

            <!-- NÚT HÀNH ĐỘNG -->
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="d-flex justify-content-between mt-4">
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="fa-solid fa-arrow-left"></i> Quay lại
                    </a>

                    <button type="submit" class="btn btn-danger">
                        <i class="fa-solid fa-trash"></i> Xóa hội viên
                    </button>
                </div>
            }
        </div>
    </div>
</div>
