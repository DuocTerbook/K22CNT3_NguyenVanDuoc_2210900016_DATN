@model K22CNT3_NVD_2210900016_DATN.Models.DonDichVu

@{
    ViewBag.Title = "Tạo đơn dịch vụ";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet" />

<style>
    .page-title {
        font-weight: 700;
        color: #1f2937;
    }

    .main-card {
        border-radius: 18px;
        border: none;
        box-shadow: 0 10px 30px rgba(0,0,0,.12);
    }

    .form-label {
        font-weight: 600;
        color: #374151;
    }
</style>

<div class="container-fluid py-4">

    <!-- HEADER -->
    <div class="mb-4">
        <h3 class="page-title">
            ➕ Tạo đơn dịch vụ mới
        </h3>
        <small class="text-muted">Nhập đầy đủ thông tin để tạo đơn</small>
    </div>

    <div class="card main-card">
        <div class="card-body">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

                <div class="row g-3">

                    <!-- KHÁCH HÀNG -->
                    <div class="col-md-6">
                        <label class="form-label">Khách hàng hệ thống</label>
                        @Html.DropDownList(
                            "ID_KhachHang",
                            null,
                            "-- Chọn khách hàng --",
                            new { @class = "form-select" }
                        )
                        @Html.ValidationMessageFor(m => m.ID_KhachHang, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Tên khách hàng</label>
                        @Html.TextBoxFor(m => m.TenKhach, new { @class = "form-control", placeholder = "Nhập tên khách" })
                        @Html.ValidationMessageFor(m => m.TenKhach, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Số điện thoại</label>
                        @Html.TextBoxFor(m => m.SDT, new { @class = "form-control", placeholder = "0xxx xxx xxx" })
                        @Html.ValidationMessageFor(m => m.SDT, "", new { @class = "text-danger" })
                    </div>

                    <!-- NGÀY -->
                    <div class="col-md-6">
                        <label class="form-label">Ngày nhận</label>
                        @Html.TextBoxFor(m => m.NgayNhan, "{0:dd-MM-yyyy}", new { @class = "form-control", type = "date" })
                        @Html.ValidationMessageFor(m => m.NgayNhan, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Ngày trả</label>
                        @Html.TextBoxFor(m => m.NgayTra, "{0:dd-MM-yyyy}", new { @class = "form-control", type = "date" })
                        @Html.ValidationMessageFor(m => m.NgayTra, "", new { @class = "text-danger" })
                    </div>

                    <!-- TIỀN & TRẠNG THÁI -->
                    <div class="col-md-6">
                        <label class="form-label">Tổng tiền (VNĐ)</label>
                        @Html.TextBoxFor(m => m.TongTien, new { @class = "form-control", type = "number", min = "0" })
                        @Html.ValidationMessageFor(m => m.TongTien, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.TrangThai, "Trạng thái")
                        @Html.DropDownListFor(
                            m => m.TrangThai,
                            (SelectList)ViewBag.TrangThai,
                            "-- Chọn trạng thái --",
                            new { @class = "form-select" }
                        )
                    </div>

                    <!-- GHI CHÚ -->
                    <div class="col-12">
                        <label class="form-label">Ghi chú</label>
                        @Html.TextAreaFor(m => m.GhiChu, 3, 0, new { @class = "form-control", placeholder = "Ghi chú thêm nếu có..." })
                        @Html.ValidationMessageFor(m => m.GhiChu, "", new { @class = "text-danger" })
                    </div>

                </div>

                <!-- BUTTON -->
                <div class="mt-4 d-flex justify-content-end gap-2">
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Quay lại
                    </a>

                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save me-1"></i> Lưu đơn
                    </button>
                </div>
            }

        </div>
    </div>
</div>
