@model K22CNT3_NVD_2210900016_DATN.Models.DonDichVu

@{
    ViewBag.Title = "Xóa đơn dịch vụ";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet" />

<style>
    .page-title {
        font-weight: 700;
        color: #991b1b;
    }

    .main-card {
        border-radius: 18px;
        border: none;
        box-shadow: 0 10px 30px rgba(0,0,0,.12);
    }

    .warning-box {
        background: #fef2f2;
        border-left: 6px solid #dc2626;
        padding: 15px;
        border-radius: 12px;
        color: #7f1d1d;
        font-weight: 600;
    }

    .info-row {
        border-bottom: 1px dashed #e5e7eb;
        padding: 10px 0;
    }

    .info-label {
        font-weight: 600;
        color: #374151;
    }
</style>

<div class="container-fluid py-4">

    <!-- HEADER -->
    <div class="mb-4">
        <h3 class="page-title">
            🗑️ Xóa đơn dịch vụ
        </h3>
        <small class="text-muted">Hành động này không thể hoàn tác</small>
    </div>

    <div class="card main-card">
        <div class="card-body">

            <!-- CẢNH BÁO -->
            <div class="warning-box mb-4">
                <i class="fas fa-triangle-exclamation me-2"></i>
                Bạn có chắc chắn muốn <strong>xóa đơn dịch vụ</strong> này không?
            </div>

            <!-- THÔNG TIN -->
            <div class="row">

                <div class="col-md-6">
                    <div class="info-row">
                        <div class="info-label">Tên khách hàng</div>
                        <div>@Model.TenKhach</div>
                    </div>

                    <div class="info-row">
                        <div class="info-label">Số điện thoại</div>
                        <div>@Model.SDT</div>
                    </div>

                    <div class="info-row">
                        <div class="info-label">Khách hàng hệ thống</div>
                        <div>@Model.KhachHang?.TenKhach</div>
                    </div>

                    <div class="info-row">
                        <div class="info-label">Ngày nhận</div>
                        <div>@Model.NgayNhan?.ToString("dd/MM/yyyy")</div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="info-row">
                        <div class="info-label">Ngày trả</div>
                        <div>@Model.NgayTra?.ToString("dd/MM/yyyy")</div>
                    </div>

                    <div class="info-row">
                        <div class="info-label">Tổng tiền</div>
                        <div class="fw-bold text-danger">
                            @String.Format("{0:N0} VNĐ", Model.TongTien)
                        </div>
                    </div>

                    <div class="info-row">
                        <div class="info-label">Trạng thái</div>
                        <div>@Model.TrangThai</div>
                    </div>

                    <div class="info-row">
                        <div class="info-label">Ghi chú</div>
                        <div>
                            @(string.IsNullOrEmpty(Model.GhiChu)
                                ? "Không có ghi chú"
                                : Model.GhiChu)
                        </div>
                    </div>
                </div>

            </div>

            <!-- BUTTON -->
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="mt-4 d-flex justify-content-end gap-2">
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Hủy
                    </a>

                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i> Xác nhận xóa
                    </button>
                </div>
            }

        </div>
    </div>
</div>
