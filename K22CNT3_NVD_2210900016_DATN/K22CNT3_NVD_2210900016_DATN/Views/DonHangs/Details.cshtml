@model K22CNT3_NVD_2210900016_DATN.Models.DonHang

<style>
    .dh-card {
        max-width: 820px;
        margin: 50px auto;
        background: linear-gradient(135deg, #f8f9fa, #ffffff);
        border-radius: 18px;
        box-shadow: 0 12px 30px rgba(0,0,0,0.15);
        overflow: hidden;
    }

    .dh-card-header {
        background: #0d6efd;
        color: white;
        padding: 22px 30px;
        font-size: 26px;
        font-weight: 700;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .dh-card-body {
        padding: 30px;
    }

    .dh-info {
        display: grid;
        grid-template-columns: 1fr 2fr;
        row-gap: 18px;
        column-gap: 20px;
        font-size: 16px;
    }

    .dh-label {
        font-weight: 700;
        color: #495057;
    }

    .dh-value {
        font-weight: 600;
        color: #212529;
    }

    .dh-status {
        padding: 6px 16px;
        border-radius: 20px;
        font-size: 14px;
        font-weight: 700;
        display: inline-block;
    }

    .st-dangxuly {
        background: #0dcaf0;
        color: #000;
    }

    .st-hoanthanh {
        background: #198754;
        color: #fff;
    }

    .st-huy {
        background: #dc3545;
        color: #fff;
    }

    .dh-card-footer {
        background: #f1f3f5;
        padding: 20px;
        text-align: center;
    }

    .dh-btn {
        display: inline-block;
        padding: 10px 26px;
        margin: 0 8px;
        border-radius: 12px;
        font-weight: 700;
        text-decoration: none;
    }

    .btn-edit {
        background: #ffc107;
        color: #000;
    }

    .btn-back {
        background: #6c757d;
        color: #fff;
    }
</style>

<div class="dh-card">
    <div class="dh-card-header">
        <span>📦 Chi tiết đơn hàng</span>
        <span>#@Model.ID_DonHang</span>
    </div>

    <div class="dh-card-body">
        <div class="dh-info">
            <div class="dh-label">Khách hàng</div>
            <div class="dh-value">@Model.KhachHang.TenKhach</div>

            <div class="dh-label">Ngày đặt</div>
            <div class="dh-value">
                @(Model.NgayDat.HasValue ? Model.NgayDat.Value.ToString("dd/MM/yyyy") : "")
            </div>

            <div class="dh-label">Tổng tiền</div>
            <div class="dh-value">
                @String.Format("{0:N0} đ", Model.TongTien)
            </div>

            <div class="dh-label">Trạng thái</div>
            <div class="dh-value">
                <span class="dh-status
                    @(Model.TrangThai == "Dang xu ly" ? "st-dangxuly" :
                      Model.TrangThai == "Hoan thanh" ? "st-hoanthanh" :
                      "st-huy")">
                    @Model.TrangThai
                </span>
            </div>
        </div>
    </div>

    <div class="dh-card-footer">
        @Html.ActionLink("✏️ Chỉnh sửa", "Edit",
            new { id = Model.ID_DonHang },
            new { @class = "dh-btn btn-edit" })

        @Html.ActionLink("⬅️ Quay lại", "Index",
            null,
            new { @class = "dh-btn btn-back" })
    </div>
</div>
