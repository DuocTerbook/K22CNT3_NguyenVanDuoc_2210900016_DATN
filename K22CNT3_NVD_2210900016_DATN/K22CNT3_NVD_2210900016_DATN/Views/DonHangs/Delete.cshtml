@model K22CNT3_NVD_2210900016_DATN.Models.DonHang

<style>
    .dh-delete-box {
        max-width: 760px;
        margin: 50px auto;
        background: #fff;
        padding: 30px;
        border-radius: 16px;
        box-shadow: 0 10px 28px rgba(0,0,0,0.2);
        border-left: 6px solid #dc3545;
    }

    .dh-delete-title {
        font-size: 28px;
        font-weight: 700;
        color: #dc3545;
        margin-bottom: 15px;
        text-align: center;
    }

    .dh-delete-warning {
        background: #fff3cd;
        color: #664d03;
        padding: 12px 18px;
        border-radius: 10px;
        margin-bottom: 25px;
        font-weight: 600;
        text-align: center;
    }

    .dh-delete-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 25px;
    }

        .dh-delete-table th {
            width: 35%;
            background: #f8d7da;
            padding: 14px;
            border: 1px solid #f5c2c7;
            text-align: left;
            font-weight: 700;
        }

        .dh-delete-table td {
            padding: 14px;
            border: 1px solid #f5c2c7;
            font-weight: 600;
        }

    .dh-btn-group {
        text-align: center;
    }

    .dh-btn {
        display: inline-block;
        padding: 10px 24px;
        margin: 0 8px;
        border-radius: 12px;
        font-weight: 700;
        text-decoration: none;
        border: none;
        cursor: pointer;
    }

    .dh-btn-delete {
        background: #dc3545;
        color: #fff;
    }

    .dh-btn-back {
        background: #6c757d;
        color: #fff;
    }
</style>

<div class="dh-delete-box">
    <div class="dh-delete-title">🗑️ Xóa đơn hàng</div>

    <div class="dh-delete-warning">
        ⚠️ Hành động này <b>không thể hoàn tác</b>.
        Bạn có chắc chắn muốn xóa đơn hàng này?
    </div>

    <table class="dh-delete-table">
        <tr>
            <th>Khách hàng</th>
            <td>@Model.KhachHang.TenKhach</td>
        </tr>
        <tr>
            <th>Ngày đặt</th>
            <td>@Model.NgayDat?.ToString("dd/MM/yyyy")</td>
        </tr>
        <tr>
            <th>Tổng tiền</th>
            <td>@String.Format("{0:N0} đ", Model.TongTien)</td>
        </tr>
        <tr>
            <th>Trạng thái</th>
            <td>@Model.TrangThai</td>
        </tr>
    </table>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="dh-btn-group">
            <input type="submit" value="❌ Xóa đơn hàng" class="dh-btn dh-btn-delete" />
            @Html.ActionLink("⬅️ Quay lại", "Index", null, new { @class = "dh-btn dh-btn-back" })
        </div>
    }
</div>
