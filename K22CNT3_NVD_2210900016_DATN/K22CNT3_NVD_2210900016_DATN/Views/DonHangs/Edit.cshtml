@model K22CNT3_NVD_2210900016_DATN.Models.DonHang

<style>
    .dh-edit-box {
        max-width: 820px;
        margin: 50px auto;
        background: #ffffff;
        padding: 32px;
        border-radius: 16px;
        box-shadow: 0 10px 28px rgba(0,0,0,0.18);
        border-left: 6px solid #ffc107;
    }

    .dh-edit-title {
        font-size: 28px;
        font-weight: 700;
        color: #ffc107;
        margin-bottom: 25px;
        text-align: center;
    }

    .dh-form-group {
        margin-bottom: 18px;
    }

    .dh-form-label {
        font-weight: 700;
        margin-bottom: 6px;
        display: block;
    }

    .dh-edit-input {
        width: 100%;
        padding: 12px 14px;
        border-radius: 10px;
        border: 1px solid #ced4da;
        font-size: 15px;
    }

        .dh-edit-input:focus {
            outline: none;
            border-color: #ffc107;
            box-shadow: 0 0 0 2px rgba(255,193,7,0.25);
        }

    .dh-btn-group {
        text-align: center;
        margin-top: 25px;
    }

    .dh-btn {
        display: inline-block;
        padding: 10px 26px;
        border-radius: 12px;
        font-weight: 700;
        border: none;
        cursor: pointer;
        text-decoration: none;
        margin: 0 6px;
    }

    .dh-btn-save {
        background: #ffc107;
        color: #000;
    }

    .dh-btn-back {
        background: #6c757d;
        color: #fff;
    }
</style>

<div class="dh-edit-box">
    <div class="dh-edit-title">✏️ Chỉnh sửa đơn hàng</div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.ID_DonHang)

        <div class="dh-form-group">
            <label class="dh-form-label">Khách hàng</label>
            @Html.DropDownList("ID_KhachHang", null, new { @class = "dh-edit-input" })
        </div>

        <div class="dh-form-group">
            <label class="dh-form-label">Ngày đặt</label>
            @Html.EditorFor(m => m.NgayDat, new
            {
                htmlAttributes = new
                {
                    @class = "dh-edit-input",
                    type = "date"
                }
            })
        </div>

        <div class="dh-form-group">
            <label class="dh-form-label">Tổng tiền</label>
            @Html.TextBoxFor(m => m.TongTien, new
            {
                @class = "dh-edit-input",
                @readonly = "readonly"
            })
        </div>

        <div class="dh-form-group">
            <label class="dh-form-label">Trạng thái</label>
            @Html.TextBoxFor(m => m.TrangThai, new { @class = "dh-edit-input" })
        </div>

        <div class="dh-btn-group">
            <input type="submit" value="💾 Lưu thay đổi" class="dh-btn dh-btn-save" />
            @Html.ActionLink("⬅️ Quay lại", "Index", null, new { @class = "dh-btn dh-btn-back" })
        </div>
    }
</div>
