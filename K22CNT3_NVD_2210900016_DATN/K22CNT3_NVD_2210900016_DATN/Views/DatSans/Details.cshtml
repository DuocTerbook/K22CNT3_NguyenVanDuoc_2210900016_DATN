@model K22CNT3_NVD_2210900016_DATN.Models.DatSan

@{
    ViewBag.Title = "Chi tiết đặt sân";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet" />

<style>
    .card-custom {
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0,0,0,.12);
    }

    .page-title {
        font-weight: 700;
        color: #0d6efd;
    }

    .info-label {
        font-weight: 600;
        color: #6c757d;
    }

    .info-value {
        font-size: 1.05rem;
    }

    .badge-status {
        font-size: 0.9rem;
        padding: 6px 12px;
        border-radius: 20px;
    }
</style>

<div class="container py-4">

    <!-- HEADER -->
    <div class="mb-3">
        <h3 class="page-title">
            <i class="fas fa-circle-info me-1"></i> Chi tiết đặt sân
        </h3>
        <small class="text-muted">Thông tin chi tiết phiếu đặt sân cầu lông</small>
    </div>

    <div class="card card-custom">
        <div class="card-body">

            <div class="row">

                <!-- KHÁCH HÀNG -->
                <div class="col-md-6 mb-3">
                    <div class="info-label">Khách hàng</div>
                    <div class="info-value">
                        <i class="fas fa-user me-1"></i>
                        @Model.KhachHang.TenKhach
                    </div>
                </div>

                <!-- SÂN -->
                <div class="col-md-6 mb-3">
                    <div class="info-label">Sân cầu lông</div>
                    <div class="info-value">
                        <i class="fas fa-table-tennis-paddle-ball me-1"></i>
                        @Model.SanCauLong.TenSan
                    </div>
                </div>

                <!-- NGÀY ĐẶT -->
                <div class="col-md-4 mb-3">
                    <div class="info-label">Ngày đặt</div>
                    <div class="info-value">
                        @Model.NgayDat.ToString("dd/MM/yyyy")
                    </div>
                </div>

                <!-- GIỜ BẮT ĐẦU -->
                <div class="col-md-4 mb-3">
                    <div class="info-label">Giờ bắt đầu</div>
                    <div class="info-value">
                        @Model.GioBatDau
                    </div>
                </div>

                <!-- GIỜ KẾT THÚC -->
                <div class="col-md-4 mb-3">
                    <div class="info-label">Giờ kết thúc</div>
                    <div class="info-value">
                        @Model.GioKetThuc
                    </div>
                </div>

                <!-- SỐ GIỜ -->
                <div class="col-md-4 mb-3">
                    <div class="info-label">Số giờ thuê</div>
                    <div class="info-value">
                        @Model.SoGio giờ
                    </div>
                </div>

                <!-- TIỀN CỌC -->
                <div class="col-md-4 mb-3">
                    <div class="info-label">Tiền cọc</div>
                    <div class="info-value">
                        @String.Format("{0:N0} đ", Model.TienCoc)
                    </div>
                </div>

                <!-- TỔNG TIỀN -->
                <div class="col-md-4 mb-3">
                    <div class="info-label">Tổng tiền</div>
                    <div class="info-value text-danger fw-bold">
                        @String.Format("{0:N0} đ", Model.TongTien)
                    </div>
                </div>

                <!-- TRẠNG THÁI -->
                <div class="col-md-6 mb-3">
                    <div class="info-label">Trạng thái</div>
                    <span class="badge badge-status
                        @(Model.TrangThai == "Hoàn thành" ? "bg-success" : "bg-warning text-dark")">
                        @Model.TrangThai
                    </span>
                </div>

                <!-- GHI CHÚ -->
                <div class="col-md-6 mb-3">
                    <div class="info-label">Ghi chú</div>
                    <div class="info-value">
                        @(string.IsNullOrWhiteSpace(Model.GhiChu)
                            ? "Không có ghi chú"
                            : Model.GhiChu)
                    </div>
                </div>

            </div>

            <!-- BUTTON -->
            <div class="text-end mt-3">
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại
                </a>
                <a href="@Url.Action("Edit", new { id = Model.ID_DatSan })" class="btn btn-primary ms-2">
                    <i class="fas fa-edit"></i> Chỉnh sửa
                </a>
            </div>

        </div>
    </div>
</div>
