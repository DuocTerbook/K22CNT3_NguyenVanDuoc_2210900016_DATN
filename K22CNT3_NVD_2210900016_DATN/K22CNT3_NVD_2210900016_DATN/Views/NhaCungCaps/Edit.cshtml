@model K22CNT3_NVD_2210900016_DATN.Models.NhaCungCap

@{
    ViewBag.Title = "Cập nhật nhà cung cấp";
}
<style>
    .edit-card {
        background: #ffffff;
        padding: 25px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.08);
    }

    .edit-title {
        text-align: center;
        font-weight: 600;
        margin-bottom: 20px;
    }

    .btn {
        border-radius: 6px;
        min-width: 100px;
    }
</style>

<h2 class="text-center">Cập nhật nhà cung cấp</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.ID_NCC)

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm p-4">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="mb-3">
                    @Html.LabelFor(m => m.TenNCC, new { @class = "form-label" })
                    @Html.EditorFor(m => m.TenNCC, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.DiaChi, new { @class = "form-label" })
                    @Html.EditorFor(m => m.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.DienThoai, new { @class = "form-label" })
                    @Html.EditorFor(m => m.DienThoai, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                    @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <div class="text-center">
                    <input type="submit" value="Lưu" class="btn btn-success px-4" />
                    <a href="@Url.Action("Index")" class="btn btn-secondary px-4 ms-2">Quay lại</a>
                </div>

            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
