@model K22CNT3_NVD_2210900016_DATN.Models.SanCauLong

@{
    ViewBag.Title = "Chỉnh sửa sân cầu lông";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet" />

<style>
    .page-title {
        font-weight: 700;
        color: #1e40af;
    }

    .card-custom {
        border-radius: 16px;
        box-shadow: 0 10px 28px rgba(0,0,0,.15);
        border: none;
    }

    .form-label {
        font-weight: 600;
    }
</style>

<div class="container py-4">

    <!-- HEADER -->
    <div class="mb-3">
        <h3 class="page-title">
            <i class="fas fa-edit me-1"></i> Chỉnh sửa sân cầu lông
        </h3>
        <small class="text-muted">
            Cập nhật thông tin sân cầu lông
        </small>
    </div>

    <!-- FORM -->
    <div class="card card-custom">
        <div class="card-body px-4 py-4">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.ID_San)

                @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

                <div class="row mb-3">
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.TenSan, new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.TenSan, new { @class = "form-control", placeholder = "Nhập tên sân" })
                        @Html.ValidationMessageFor(model => model.TenSan, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-6">
                        @Html.LabelFor(model => model.LoaiSan, new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.LoaiSan, new { @class = "form-control", placeholder = "VD: Sân đơn / Sân đôi" })
                        @Html.ValidationMessageFor(model => model.LoaiSan, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.GiaThueTheoGio, new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.GiaThueTheoGio, new { @class = "form-control", placeholder = "Giá thuê theo giờ" })
                        @Html.ValidationMessageFor(model => model.GiaThueTheoGio, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-6">
                        @Html.LabelFor(model => model.TrangThai, new { @class = "form-label" })
                        @Html.DropDownListFor(
                            model => model.TrangThai,
                            new SelectList(
                                new[]
                                {
                                    new { Value = "HoatDong", Text = "Hoạt động" },
                                    new { Value = "Ngung", Text = "Ngưng hoạt động" }
                                },
                                "Value",
                                "Text",
                                Model.TrangThai
                            ),
                            "-- Chọn trạng thái --",
                            new { @class = "form-control" }
                        )
                        @Html.ValidationMessageFor(model => model.TrangThai, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="mb-4">
                    @Html.LabelFor(model => model.MoTa, new { @class = "form-label" })
                    @Html.TextAreaFor(model => model.MoTa, 4, 100,
                        new { @class = "form-control", placeholder = "Nhập mô tả sân (nếu có)" })
                    @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                </div>

                <!-- BUTTON -->
                <div class="d-flex justify-content-between">
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Quay lại
                    </a>

                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Lưu thay đổi
                    </button>
                </div>
            }

        </div>
    </div>
</div>
