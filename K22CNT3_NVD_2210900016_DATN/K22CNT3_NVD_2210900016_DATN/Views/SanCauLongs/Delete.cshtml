@model K22CNT3_NVD_2210900016_DATN.Models.SanCauLong

@{
    ViewBag.Title = "Xóa sân cầu lông";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet" />

<style>
    .page-title {
        font-weight: 700;
        color: #b91c1c;
    }

    .card-danger {
        border-radius: 16px;
        box-shadow: 0 10px 28px rgba(0,0,0,.18);
        border: 2px solid #ef4444;
    }

    .info-label {
        font-weight: 600;
        color: #374151;
    }

    .badge-status {
        font-size: 0.9rem;
        padding: 6px 12px;
        border-radius: 20px;
    }
</style>

<div class="container py-4">

    <!-- HEADER -->
    <div class="mb-3">
        <h3 class="page-title">
            <i class="fas fa-triangle-exclamation me-1"></i> Xác nhận xóa sân cầu lông
        </h3>
        <small class="text-muted">
            Hành động này <strong>không thể hoàn tác</strong>
        </small>
    </div>

    <!-- CARD -->
    <div class="card card-danger">
        <div class="card-body px-4 py-4">

            <div class="row mb-3">
                <div class="col-md-4 info-label">Tên sân</div>
                <div class="col-md-8">@Model.TenSan</div>
            </div>

            <div class="row mb-3">
                <div class="col-md-4 info-label">Loại sân</div>
                <div class="col-md-8">@Model.LoaiSan</div>
            </div>

            <div class="row mb-3">
                <div class="col-md-4 info-label">Giá thuê / giờ</div>
                <div class="col-md-8 text-success fw-bold">
                    @String.Format("{0:N0} đ", Model.GiaThueTheoGio)
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-4 info-label">Trạng thái</div>
                <div class="col-md-8">
                    @if (Model.TrangThai == "HoatDong")
                    {
                        <span class="badge bg-success badge-status">
                            <i class="fas fa-circle-check"></i> Hoạt động
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-secondary badge-status">
                            <i class="fas fa-circle-xmark"></i> Ngưng hoạt động
                        </span>
                    }
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-4 info-label">Mô tả</div>
                <div class="col-md-8">
                    @if (string.IsNullOrWhiteSpace(Model.MoTa))
                    {
                        <span class="text-muted fst-italic">Chưa có mô tả</span>
                    }
                    else
                    {
                        @Model.MoTa
                    }
                </div>
            </div>

            <!-- BUTTON -->
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="d-flex justify-content-between">
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Hủy
                    </a>

                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Xác nhận xóa
                    </button>
                </div>
            }

        </div>
    </div>
</div>
