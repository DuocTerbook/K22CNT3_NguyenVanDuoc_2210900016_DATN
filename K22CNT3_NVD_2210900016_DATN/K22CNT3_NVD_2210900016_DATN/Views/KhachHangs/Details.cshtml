@model K22CNT3_NVD_2210900016_DATN.Models.KhachHang

<style>
    .kh-detail-box {
        max-width: 760px;
        margin: 50px auto;
        background: #ffffff;
        padding: 30px;
        border-radius: 16px;
        box-shadow: 0 10px 28px rgba(0,0,0,0.18);
        border-left: 6px solid #0dcaf0;
    }

    .kh-detail-title {
        font-size: 28px;
        font-weight: 700;
        color: #0dcaf0;
        margin-bottom: 20px;
        text-align: center;
    }

    .kh-detail-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 25px;
    }

        .kh-detail-table th {
            width: 30%;
            background: #e7f8fb;
            padding: 14px;
            border: 1px solid #b6effb;
            text-align: left;
            font-weight: 700;
        }

        .kh-detail-table td {
            padding: 14px;
            border: 1px solid #b6effb;
            font-weight: 600;
        }

    .kh-btn-group {
        text-align: center;
    }

    .kh-btn {
        display: inline-block;
        padding: 10px 24px;
        margin: 0 8px;
        border-radius: 12px;
        font-weight: 700;
        text-decoration: none;
    }

    .kh-btn-edit {
        background: #ffc107;
        color: #000;
    }

    .kh-btn-back {
        background: #6c757d;
        color: #fff;
    }
</style>

<div class="kh-detail-box">
    <div class="kh-detail-title">👤 Thông tin khách hàng</div>

    <table class="kh-detail-table">
        <tr>
            <th>Tên khách</th>
            <td>@Model.TenKhach</td>
        </tr>
        <tr>
            <th>Điện thoại</th>
            <td>@Model.DienThoai</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>@Model.Email</td>
        </tr>
        <tr>
            <th>Địa chỉ</th>
            <td>@Model.DiaChi</td>
        </tr>
    </table>

    <div class="kh-btn-group">
        @Html.ActionLink("✏️ Sửa", "Edit", new { id = Model.ID_KhachHang }, new { @class = "kh-btn kh-btn-edit" })
        @Html.ActionLink("⬅️ Quay lại", "Index", null, new { @class = "kh-btn kh-btn-back" })
    </div>
</div>
