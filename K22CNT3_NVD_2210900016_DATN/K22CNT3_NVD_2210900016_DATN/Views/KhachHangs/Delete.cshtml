@model K22CNT3_NVD_2210900016_DATN.Models.KhachHang

<style>
    .kh-delete-box {
        max-width: 760px;
        margin: 50px auto;
        background: #ffffff;
        padding: 30px;
        border-radius: 16px;
        box-shadow: 0 10px 28px rgba(0,0,0,0.2);
        border-left: 6px solid #dc3545;
    }

    .kh-delete-title {
        font-size: 28px;
        font-weight: 700;
        color: #dc3545;
        margin-bottom: 15px;
        text-align: center;
    }

    .kh-delete-warning {
        background: #fff3cd;
        color: #664d03;
        padding: 12px 18px;
        border-radius: 10px;
        margin-bottom: 25px;
        font-weight: 600;
        text-align: center;
    }

    .kh-delete-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 25px;
    }

        .kh-delete-table th {
            width: 30%;
            background: #f8d7da;
            padding: 14px;
            border: 1px solid #f5c2c7;
            text-align: left;
            font-weight: 700;
        }

        .kh-delete-table td {
            padding: 14px;
            border: 1px solid #f5c2c7;
            font-weight: 600;
        }

    .kh-btn-group {
        text-align: center;
    }

    .kh-btn {
        display: inline-block;
        padding: 10px 24px;
        margin: 0 8px;
        border-radius: 12px;
        font-weight: 700;
        text-decoration: none;
        border: none;
        cursor: pointer;
    }

    .kh-btn-delete {
        background: #dc3545;
        color: #fff;
    }

    .kh-btn-back {
        background: #6c757d;
        color: #fff;
    }
</style>

<div class="kh-delete-box">
    <div class="kh-delete-title">🗑️ Xóa khách hàng</div>

    <div class="kh-delete-warning">
        ⚠️ Xóa khách hàng sẽ <b>ảnh hưởng đến các đơn hàng liên quan</b>.
        Bạn có chắc chắn muốn tiếp tục?
    </div>

    <table class="kh-delete-table">
        <tr>
            <th>Tên khách</th>
            <td>@Model.TenKhach</td>
        </tr>
        <tr>
            <th>Điện thoại</th>
            <td>@Model.DienThoai</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>@Model.Email</td>
        </tr>
        <tr>
            <th>Địa chỉ</th>
            <td>@Model.DiaChi</td>
        </tr>
    </table>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="kh-btn-group">
            <input type="submit" value="❌ Xóa khách hàng" class="kh-btn kh-btn-delete" />
            @Html.ActionLink("⬅️ Quay lại", "Index", null, new { @class = "kh-btn kh-btn-back" })
        </div>
    }
</div>
