<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="d-flex">
        <!-- SIDEBAR -->
        <nav class="bg-dark text-white p-3" style="width: 250px; min-height: 100vh;">
            <h4 class="text-center mb-4">Nguyễn Văn Được</h4>

            <ul class="nav flex-column">
                <li class="nav-item mb-2">
                    @Html.ActionLink("🏠 Home", "Index", "Home", null, new { @class = "nav-link text-white" })
                </li>
                <li class="nav-item mb-2">
                    @Html.ActionLink("👤 Quản Trị", "Index", "QuanTris", null, new { @class = "nav-link text-white" })
                </li>
                <li class="nav-item mb-2">
                    @Html.ActionLink("📥 Phiếu Nhập", "Index", "PhieuNhaps", null, new { @class = "nav-link text-white" })
                </li>
                <li class="nav-item mb-2">
                    @Html.ActionLink("📋 Chi Tiết Phiếu Nhập", "Index", "ChiTietPhieuNhaps", null, new { @class = "nav-link text-white" })
                </li>
                <li class="nav-item mb-2">
                    @Html.ActionLink("🛒 Giỏ Hàng", "Index", "GioHangChiTiets", null, new { @class = "nav-link text-white" })
                </li>

                @if (Session["Admin"] != null)
                {
                    <li class="nav-item mt-3">
                        @Html.ActionLink("🚪 Đăng xuất", "Logout", "AdminAuth", null,
                            new { @class = "nav-link text-warning" })
                    </li>
                }
            </ul>
        </nav>

        <!-- CONTENT -->
        <div class="flex-fill p-4">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>

</html>
