@model K22CNT3_NVD_2210900016_DATN.Models.ChiTietPhieuNhap

@{
    ViewBag.Title = "Thêm chi tiết phiếu nhập";
}

<style>
    .ctp-container {
        margin-top: 30px;
        display: flex;
        justify-content: center;
    }

    .ctp-card {
        width: 700px;
        background: #ffffff;
        padding: 25px 30px;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    .ctp-title {
        text-align: center;
        font-weight: 600;
        margin-bottom: 25px;
    }

    .form-group label {
        font-weight: 500;
    }

    .btn {
        border-radius: 8px;
        padding: 8px 18px;
    }

    .btn-back {
        margin-left: 10px;
    }
</style>

<h2 class="ctp-title">Thêm chi tiết phiếu nhập</h2>

<div class="ctp-container">
    <div class="ctp-card">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.ID_PhieuNhap, "Phiếu nhập",
                    new { @class = "control-label" })
                @Html.DropDownList("ID_PhieuNhap", null,
                    "-- Chọn phiếu nhập --",
                    new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ID_PhieuNhap, "",
                    new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.ID_SP, "Sản phẩm",
                    new { @class = "control-label" })
                @Html.DropDownList("ID_SP", null,
                    "-- Chọn sản phẩm --",
                    new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ID_SP, "",
                    new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.SoLuong, "Số lượng",
                    new { @class = "control-label" })
                @Html.EditorFor(model => model.SoLuong,
                    new { htmlAttributes = new { @class = "form-control", min = "1" } })
                @Html.ValidationMessageFor(model => model.SoLuong, "",
                    new { @class = "text-danger" })
            </div>

            <div class="form-group mb-4">
                @Html.LabelFor(model => model.DonGiaNhap, "Đơn giá nhập (VNĐ)",
                    new { @class = "control-label" })
                @Html.EditorFor(model => model.DonGiaNhap,
                    new { htmlAttributes = new { @class = "form-control", min = "0" } })
                @Html.ValidationMessageFor(model => model.DonGiaNhap, "",
                    new { @class = "text-danger" })
            </div>

            <div class="text-center">
                <input type="submit" value="💾 Lưu" class="btn btn-success" />
                @Html.ActionLink("↩ Quay lại", "Index", null,
                    new { @class = "btn btn-secondary btn-back" })
            </div>
        }

    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
