@model K22CNT3_NVD_2210900016_DATN.Models.DichVu
@{
    ViewBag.Title = "Xóa dịch vụ";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet" />

<style>
    body {
        background: #f4f6f9;
    }

    .delete-card {
        max-width: 760px;
        margin: auto;
        border-radius: 20px;
        border: none;
        box-shadow: 0 20px 45px rgba(0,0,0,.12);
        overflow: hidden;
        background: #fff;
    }

    .delete-header {
        background: linear-gradient(135deg,#ef4444,#dc2626);
        color: #fff;
        padding: 35px;
        text-align: center;
    }

    .warning-icon {
        width: 85px;
        height: 85px;
        background: rgba(255,255,255,.2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
    }

    .info-box {
        background: #f8fafc;
        border-radius: 15px;
        padding: 20px;
        border-left: 5px solid #3b82f6;
        margin-bottom: 20px;
    }

    .danger-box {
        background: #fff5f5;
        border: 2px dashed #ef4444;
        border-radius: 15px;
        padding: 20px;
        margin-bottom: 20px;
    }

    .service-details {
        background: #fff;
        border-radius: 12px;
        padding: 15px;
        border: 1px solid #e5e7eb;
    }

    .detail-row {
        display: flex;
        justify-content: space-between;
        padding: 8px 0;
        border-bottom: 1px solid #f1f5f9;
    }

        .detail-row:last-child {
            border-bottom: none;
        }

    .confirmation-check {
        background: #fff5f5;
        border: 2px solid #fecaca;
        border-radius: 12px;
        padding: 15px;
        margin-bottom: 20px;
    }

    .btn-delete {
        background: linear-gradient(135deg,#ef4444,#dc2626);
        border: none;
        border-radius: 12px;
        padding: 12px 35px;
        font-weight: 600;
        color: #fff;
    }

        .btn-delete:disabled {
            opacity: .6;
        }

    .btn-cancel {
        background: #f8fafc;
        border: 2px solid #e5e7eb;
        border-radius: 12px;
        padding: 12px 35px;
        font-weight: 600;
    }

    .alt-action-btn {
        width: 100%;
        border-radius: 10px;
        padding: 12px;
        margin-bottom: 10px;
        text-align: left;
    }
</style>

<div class="container py-5">
    <div class="card delete-card">
        <div class="delete-header">
            <div class="warning-icon">
                <i class="fas fa-triangle-exclamation fa-2x"></i>
            </div>
            <h3 class="mb-2">Xác nhận xóa dịch vụ</h3>
            <p class="mb-0 opacity-75">Hành động này không thể hoàn tác</p>
        </div>

        <div class="card-body p-4">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.ID_DichVu)

                <!-- INFO -->
                <div class="info-box">
                    <h5 class="text-danger mb-3">
                        <i class="fas fa-trash-alt me-2"></i>Dịch vụ sẽ bị xóa
                    </h5>

                    <div class="service-details">
                        <div class="detail-row">
                            <span>Tên dịch vụ</span>
                            <strong>@Model.TenDichVu</strong>
                        </div>
                        <div class="detail-row">
                            <span>ID</span>
                            <strong>@Model.ID_DichVu</strong>
                        </div>
                        <div class="detail-row">
                            <span>Loại</span>
                            <span class="badge bg-secondary">@Model.LoaiDichVu?.TenLoaiDV</span>
                        </div>
                        <div class="detail-row">
                            <span>Đơn giá</span>
                            <strong class="text-primary">@Model.DonGia.ToString("N0") VNĐ</strong>
                        </div>
                        <div class="detail-row">
                            <span>Trạng thái</span>
                            @if (Model.TrangThai == true)
                            {
                                <span class="badge bg-success">Hoạt động</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Ngừng</span>
                            }
                        </div>
                    </div>
                </div>

                <!-- WARNING -->
                <div class="danger-box">
                    <h6 class="text-danger mb-2">
                        <i class="fas fa-circle-exclamation me-2"></i>Cảnh báo
                    </h6>
                    <ul class="mb-0">
                        <li>Dữ liệu liên quan sẽ bị ảnh hưởng</li>
                        <li>Lịch sử không thể khôi phục</li>
                        <li>Báo cáo thống kê có thể sai lệch</li>
                    </ul>
                </div>

                <!-- ALTERNATIVE -->
                <div class="mb-3">
                    <h6><i class="fas fa-random me-2"></i>Hành động thay thế</h6>
                    <div class="row">
                        <div class="col-md-6">
                            <a href="@Url.Action("Edit", new { id = Model.ID_DichVu })"
                               class="btn btn-outline-warning alt-action-btn">
                                <i class="fas fa-pen me-2"></i>Sửa dịch vụ
                            </a>
                        </div>
                        <div class="col-md-6">
                            <button type="button"
                                    onclick="disableService()"
                                    class="btn btn-outline-secondary alt-action-btn">
                                <i class="fas fa-toggle-off me-2"></i>Ngừng hoạt động
                            </button>
                        </div>
                    </div>
                </div>

                <!-- CONFIRM -->
                <div class="confirmation-check">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="confirmDelete" required>
                        <label class="form-check-label fw-bold" for="confirmDelete">
                            Tôi xác nhận xóa vĩnh viễn dịch vụ này
                        </label>
                    </div>
                </div>

                <!-- ACTION -->
                <div class="d-flex justify-content-between">
                    <a href="@Url.Action("Index")" class="btn btn-cancel">
                        <i class="fas fa-arrow-left me-2"></i>Quay lại
                    </a>
                    <button type="submit" class="btn btn-delete" id="submitBtn" disabled>
                        <i class="fas fa-trash me-2"></i>Xóa
                    </button>
                </div>
            }
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script>
    $('#confirmDelete').on('change', function () {
        $('#submitBtn').prop('disabled', !this.checked);
    });

    $('form').on('submit', function () {
        $('#submitBtn').html('<i class="fas fa-spinner fa-spin me-2"></i>Đang xóa...');
        $('#submitBtn').prop('disabled', true);
    });

    // GLOBAL FUNCTION (FIX LỖI)
    function disableService() {
        if (confirm('Bạn muốn ngừng hoạt động dịch vụ này thay vì xóa?')) {
            window.location.href = '@Url.Action("Edit", new { id = Model.ID_DichVu })';
        }
    }
</script>
