@model IEnumerable<K22CNT3_NVD_2210900016_DATN.Models.DichVu>

@{
    ViewBag.Title = "Danh sách dịch vụ";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet" />

<style>
    .card-custom {
        border-radius: 18px;
        box-shadow: 0 12px 30px rgba(0,0,0,.08);
        border: none;
    }

    .badge-status {
        padding: 6px 12px;
        font-size: 0.85rem;
        border-radius: 20px;
    }

    table th {
        white-space: nowrap;
    }

    table td {
        vertical-align: middle;
    }
</style>

<div class="container py-4">

    <!-- HEADER -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="fw-bold text-primary">
            <i class="fas fa-concierge-bell me-2"></i>Danh sách dịch vụ
        </h4>

        <a href="@Url.Action("Create")" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i>Thêm dịch vụ
        </a>
    </div>

    <!-- CARD -->
    <div class="card card-custom">
        <div class="card-body p-4">

            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Tên dịch vụ</th>
                        <th>Loại dịch vụ</th>
                        <th class="text-end">Đơn giá</th>
                        <th>Thời gian</th>
                        <th>Trạng thái</th>
                        <th class="text-center">Thao tác</th>
                    </tr>
                </thead>

                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">
                                Không có dữ liệu dịch vụ
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-semibold">
                                    @item.TenDichVu
                                </td>

                                <td>
                                    @if (item.LoaiDichVu != null)
                                    {
                                        <span class="badge bg-info">
                                            @item.LoaiDichVu.TenLoaiDV
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">
                                            Chưa phân loại
                                        </span>
                                    }
                                </td>

                                <td class="text-end text-primary fw-bold">
                                    @item.DonGia.ToString("N0") đ
                                </td>

                                <td>
                                    @item.ThoiGianThucHien phút
                                </td>

                                <td>
                                    @if (item.TrangThai == true)
                                    {
                                        <span class="badge bg-success badge-status">
                                            Hoạt động
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger badge-status">
                                            Ngừng
                                        </span>
                                    }
                                </td>

                                <td class="text-center">
                                    <a class="btn btn-sm btn-warning me-1"
                                       href="@Url.Action("Edit", new { id = item.ID_DichVu })"
                                       title="Sửa">
                                        <i class="fas fa-edit"></i>
                                    </a>

                                    <a class="btn btn-sm btn-danger"
                                       href="@Url.Action("Delete", new { id = item.ID_DichVu })"
                                       title="Xóa">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>
