@model IEnumerable<K22CNT3_NVD_2210900016_DATN.Models.LoaiDichVu>

@{
    ViewBag.Title = "Quản lý loại dịch vụ";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet" />

<style>
    .page-title {
        font-weight: 700;
        color: #1f2937;
    }

    .main-card {
        border-radius: 14px;
        border: none;
        box-shadow: 0 10px 25px rgba(0,0,0,.08);
    }

    .btn-action {
        border-radius: 8px;
        padding: 6px 10px;
    }

    .table thead {
        background: #f8fafc;
    }

    .table tbody tr:hover {
        background: #f9fafb;
    }

    .badge-count {
        font-size: .85rem;
        padding: 6px 12px;
    }

    .search-box {
        position: relative;
    }

        .search-box i {
            position: absolute;
            top: 50%;
            left: 12px;
            transform: translateY(-50%);
            color: #9ca3af;
        }

    .search-input {
        padding-left: 38px;
        border-radius: 20px;
    }
</style>

<div class="container-fluid py-3">

    <!-- HEADER -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="page-title mb-1">📂 Quản lý loại dịch vụ</h3>
            <small class="text-muted">Danh sách các loại dịch vụ trong hệ thống</small>
        </div>

        <a href="@Url.Action("Create")" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i> Thêm loại dịch vụ
        </a>
    </div>

    <!-- THÔNG BÁO -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle me-1"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- SEARCH + COUNT -->
    <div class="row mb-3">
        <div class="col-md-4">
            <div class="search-box">
                <i class="fas fa-search"></i>
                <input type="text" id="searchInput"
                       class="form-control search-input"
                       placeholder="Tìm kiếm loại dịch vụ..." />
            </div>
        </div>
        <div class="col-md-8 text-end">
            <span class="badge bg-secondary badge-count">
                Tổng: @Model.Count() loại dịch vụ
            </span>
        </div>
    </div>

    <!-- TABLE -->
    <div class="card main-card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table align-middle table-hover" id="dataTable">
                    <thead>
                        <tr>
                            <th>Tên loại dịch vụ</th>
                            <th>Mô tả</th>
                            <th class="text-center">Số dịch vụ</th>
                            <th class="text-center" width="180">Thao tác</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr data-search="@item.TenLoaiDV.ToLower() @(item.MoTa?.ToLower() ?? "")">

                                <td>
                                    <strong>@item.TenLoaiDV</strong>
                                </td>

                                <td>
                                    @if (string.IsNullOrEmpty(item.MoTa))
                                    {
                                        <span class="text-muted fst-italic">Chưa có mô tả</span>
                                    }
                                    else
                                    {
                                        @item.MoTa
                                    }
                                </td>

                                <td class="text-center">
                                    <span class="badge bg-info badge-count">
                                        @(item.DichVus?.Count() ?? 0)
                                    </span>
                                </td>

                                <td class="text-center">
                                    <a class="btn btn-info btn-sm btn-action"
                                       title="Xem chi tiết"
                                       href="@Url.Action("Details", new { id = item.ID_LoaiDV })">
                                        <i class="fas fa-eye"></i>
                                    </a>

                                    <a class="btn btn-warning btn-sm btn-action"
                                       title="Chỉnh sửa"
                                       href="@Url.Action("Edit", new { id = item.ID_LoaiDV })">
                                        <i class="fas fa-edit"></i>
                                    </a>

                                    <a class="btn btn-danger btn-sm btn-action"
                                       title="Xóa"
                                       href="@Url.Action("Delete", new { id = item.ID_LoaiDV })">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                @if (!Model.Any())
                {
                    <div class="text-center py-4 text-muted">
                        <i class="fas fa-inbox fa-2x mb-2"></i>
                        <p>Chưa có loại dịch vụ nào</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $('#searchInput').on('keyup', function () {
            let value = $(this).val().toLowerCase();
            $('#dataTable tbody tr').filter(function () {
                let search = $(this).data('search') || '';
                $(this).toggle(search.indexOf(value) > -1);
            });
        });
    </script>
}
