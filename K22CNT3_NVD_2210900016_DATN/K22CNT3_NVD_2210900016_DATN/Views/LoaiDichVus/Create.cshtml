@model K22CNT3_NVD_2210900016_DATN.Models.LoaiDichVu
@{
    ViewBag.Title = "Thêm loại dịch vụ";
}

<style>
    .create-card {
        max-width: 600px;
        margin: auto;
        border-radius: 14px;
        border: none;
        box-shadow: 0 10px 25px rgba(0,0,0,0.1);
    }

    .create-header {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        color: white;
        padding: 25px;
        border-radius: 14px 14px 0 0;
        text-align: center;
    }

    .form-control {
        border-radius: 10px;
        padding: 10px 14px;
    }

    .btn-rounded {
        border-radius: 8px;
        padding: 8px 22px;
    }

    .counter {
        font-size: 0.85rem;
        color: #6c757d;
        text-align: right;
    }
</style>

<div class="container py-5">

    <div class="card create-card">
        <div class="create-header">
            <h4 class="mb-1">➕ Thêm loại dịch vụ</h4>
            <small>Nhập thông tin loại dịch vụ mới</small>
        </div>

        <div class="card-body">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label class="fw-semibold">Tên loại dịch vụ <span class="text-danger">*</span></label>
                    @Html.EditorFor(model => model.TenLoaiDV, new
                    {
                        htmlAttributes = new
                        {
                            @class = "form-control",
                            placeholder = "Nhập tên loại dịch vụ",
                            maxlength = "100",
                            id = "TenLoaiDV"
                        }
                    })
                    <div class="counter" id="tenCount">0/100</div>
                    @Html.ValidationMessageFor(model => model.TenLoaiDV, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    <label class="fw-semibold">Mô tả</label>
                    @Html.TextAreaFor(model => model.MoTa, new
                    {
                        @class = "form-control",
                        rows = 4,
                        maxlength = "500",
                        id = "MoTa",
                        placeholder = "Nhập mô tả (nếu có)"
                    })
                    <div class="counter" id="motaCount">0/500</div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a href="@Url.Action("Index")" class="btn btn-secondary btn-rounded">
                        Hủy
                    </a>
                    <button type="submit" class="btn btn-primary btn-rounded">
                        💾 Lưu
                    </button>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $('#TenLoaiDV').on('input', function () {
            $('#tenCount').text(this.value.length + '/100');
        });

        $('#MoTa').on('input', function () {
            $('#motaCount').text(this.value.length + '/500');
        });
    </script>
}
