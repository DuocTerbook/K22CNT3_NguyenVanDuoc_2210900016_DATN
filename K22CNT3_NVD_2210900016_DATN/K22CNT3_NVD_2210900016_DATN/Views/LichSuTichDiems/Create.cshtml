@model K22CNT3_NVD_2210900016_DATN.Models.LichSuTichDiem

@{
    ViewBag.Title = "Thêm lịch sử tích điểm";
}

<h2 class="text-primary">Thêm lịch sử tích điểm</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <!-- Hội viên -->
        <div class="form-group">
            @Html.LabelFor(model => model.ID_HoiVien, "Hội viên", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(
                    model => model.ID_HoiVien,
                    (SelectList)ViewBag.ID_HoiVien,
                    "-- Chọn hội viên --",
                    new { @class = "form-control" }
                )
                @Html.ValidationMessageFor(model => model.ID_HoiVien, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Đơn hàng -->
        <div class="form-group">
            @Html.LabelFor(model => model.ID_DonHang, "Đơn hàng", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(
                    model => model.ID_DonHang,
                    (SelectList)ViewBag.ID_DonHang,
                    "-- Chọn đơn hàng --",
                    new { @class = "form-control" }
                )
                @Html.ValidationMessageFor(model => model.ID_DonHang, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Đơn dịch vụ -->
        <div class="form-group">
            @Html.LabelFor(model => model.ID_DonDV, "Đơn dịch vụ", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(
                    model => model.ID_DonDV,
                    (SelectList)ViewBag.ID_DonDV,
                    "-- Chọn đơn dịch vụ --",
                    new { @class = "form-control" }
                )
                @Html.ValidationMessageFor(model => model.ID_DonDV, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Điểm cộng -->
        <div class="form-group">
            @Html.LabelFor(model => model.DiemCong, "Điểm cộng", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DiemCong, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DiemCong, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Điểm trừ -->
        <div class="form-group">
            @Html.LabelFor(model => model.DiemTru, "Điểm trừ", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DiemTru, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DiemTru, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Lý do -->
        <div class="form-group">
            @Html.LabelFor(model => model.LyDo, "Lý do", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.LyDo, new { @class = "form-control", rows = 3 })
                @Html.ValidationMessageFor(model => model.LyDo, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Ngày tích điểm -->
        <div class="form-group">
            @Html.LabelFor(model => model.NgayTichDiem, "Ngày tích điểm", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(
                    model => model.NgayTichDiem,
                    "{0:yyyy-MM-dd}",
                    new { @class = "form-control", type = "date" }
                )
                @Html.ValidationMessageFor(model => model.NgayTichDiem, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Nút -->
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-success" />
                @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        </div>
    </div>
}
