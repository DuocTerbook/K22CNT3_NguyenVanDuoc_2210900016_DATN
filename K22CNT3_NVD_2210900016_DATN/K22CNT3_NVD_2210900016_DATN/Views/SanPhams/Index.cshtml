@model IEnumerable<K22CNT3_NVD_2210900016_DATN.Models.SanPham>

@{
    ViewBag.Title = "Danh sách sản phẩm";
}
<style>
    .product-card {
        height: 100%;
        border-radius: 12px;
        border: 1px solid #ddd;
        box-shadow: 0 4px 10px rgba(0,0,0,0.08);
        overflow: hidden;
        display: flex;
        flex-direction: column;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 18px rgba(0,0,0,0.15);
        }

        .product-card .card-img-top {
            height: 180px;
            object-fit: cover;
            background-color: #f7f7f7;
        }

        .product-card .card-body {
            padding: 12px;
            flex-grow: 1;
        }

        .product-card .card-title {
            font-size: 16px;
            font-weight: 600;
            margin-bottom: 8px;
        }

        .product-card .card-text {
            font-size: 13px;
            line-height: 1.5;
        }

        .product-card .card-footer {
            padding: 8px;
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 6px;
        }
</style>

<h2 class="mb-3">@ViewBag.Title</h2>

<p>
    @Html.ActionLink("➕ Thêm sản phẩm mới", "Create", null,
        new { @class = "btn btn-success mb-3" })
</p>

<div class="container">
    <div class="row g-3">
        @foreach (var item in Model)
        {
            <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12">
                <div class="card product-card">
                    <img src="@item.HinhAnh"
                         class="card-img-top"
                         alt="@item.TenSP" />

                    <div class="card-body">
                        <h5 class="card-title">@item.TenSP</h5>

                        <p class="card-text">
                            <strong>Thương hiệu:</strong> @item.ThuongHieu <br />
                            <strong>Giá:</strong> @item.DonGia.ToString("N0") đ <br />
                            <strong>Số lượng:</strong> @item.SoLuong <br />
                            <strong>Đơn vị:</strong> @item.DVT <br />
                            <strong>Bảo hành:</strong> @item.BaoHanhThang tháng <br />
                            <strong>Trạng thái:</strong>
                            @(item.TrangThai == true ? "Đang bán" : "Ngừng bán")
                        </p>
                    </div>

                    <div class="card-footer">
                        @Html.ActionLink("Xem", "Details",
                            new { id = item.ID_SP },
                            new { @class = "btn btn-info btn-sm" })

                        @Html.ActionLink("Sửa", "Edit",
                            new { id = item.ID_SP },
                            new { @class = "btn btn-warning btn-sm" })

                        @Html.ActionLink("Xóa", "Delete",
                            new { id = item.ID_SP },
                            new { @class = "btn btn-danger btn-sm" })

                        <a href="@Url.Action("AddToCart", "GioHangs", new { id = item.ID_SP })"
                           class="btn btn-success btn-sm">
                            Thêm giỏ
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


